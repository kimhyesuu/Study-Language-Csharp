<UserControl x:Class="ChatApp.Desktop.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Desktop.Views"
             mc:Ignorable="d" 
              MinWidth="160" MinHeight="100">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                    Orientation="Vertical" Margin="166,164,150,164" Width="209">
            <TextBox x:Name="UserName" HorizontalAlignment="Center"
                     VerticalAlignment="Center" Margin="2" 
                     TextWrapping="Wrap" Width="160"/>
            <Button Name="LoginButton" Content="Login" Width="100" Background="Green" 
                    Foreground="White" HorizontalAlignment="Right"
                    Margin="0,10,25,0"
                    Click="LoginButton_Click" 
                    />
        </StackPanel>
            
    </Grid>
</UserControl>
