<UserControl x:Class="ChatApp.Desktop.Views.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Desktop..ViewModels"
             mc:Ignorable="d" 
             MinHeight="300" MinWidth="300">
    <Grid Background="Gray" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="BlueViolet">
            <Label Name="Title" Content="Welcome to chat app"
                   HorizontalAlignment="Center"
                   Foreground="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <!--https://www.youtube.com/watch?v=83B1soAspOU 3:23 -->
        </Grid>
        
    </Grid>
</UserControl>
