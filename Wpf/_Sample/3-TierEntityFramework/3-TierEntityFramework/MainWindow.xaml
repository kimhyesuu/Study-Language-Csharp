<Window x:Class="_3_TierEntityFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3_TierEntityFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="0,50">
        <DataGrid
            HorizontalAlignment="Center"         
            VerticalAlignment="Top"           
            Loaded="DataGrid_Loaded"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50">
            <Button x:Name="addBtn" Content="Add" Width="120" Height="50" />
            <Button x:Name="editBtn" Content="Edit" Width="120" Height="50"/>
            <Button x:Name="deleteBtn" Content="Delete" Width="120" Height="50"/>
        </StackPanel>
    </StackPanel>

</Window>
