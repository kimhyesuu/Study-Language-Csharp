<Window x:Class="Async_Exe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_Exe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<StackPanel Orientation="Horizontal">
				<Button Width="150" Height="100" Content="timer" FontSize="20" Click="Button_Click"	/>
				<Button Width="150" Height="100" Content="Async" FontSize="20" Click="Button_Click_1"	/>
			</StackPanel>
		</Grid>

		<Grid Grid.Row="1">
			<TextBlock x:Name="ttt" Height="100" Background="Black" Foreground="White"/>
		</Grid>
    </Grid>
</Window>
